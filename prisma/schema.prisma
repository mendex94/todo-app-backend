generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
  tasks    Task[]

  @@map("users")
}

model Task {
  id        String  @id @default(uuid())
  body      String
  title     String
  completed Boolean @default(false)
  user      User    @relation(fields: [userId], references: [id])
  userId    String  @map("user_id")

  @@index([userId])
  @@map("tasks")
}
